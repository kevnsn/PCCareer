<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.pcgov.pcova"
	version 	= "1.0.0">

	<name>PC RPCV Career Link</name>

	<description>
		Peace Corps RPCV Career Link interactive job board carries on the proud, 50-year tradition of connecting returned Peace Corps Volunteers (RPCVs) with post-service career and education opportunities.	</description>

	<author href="http://peacecorps.gov"
		email="innovation@peacecorps.gov">
		Peace Corps Office of Innovation
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />
	<icon src="iconbb.png" gap:platform="blackberry" />
	
    <gap:splash src="splash.png" />

	<!--<feature name="http://api.phonegap.com/1.0/geolocation"/>-->
	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
	<preference name="stay-in-webview" value="false" />
	<preference name="phonegap-version" value="2.7.0" />
	<preference name="orientation" value="portrait" />
	<preference name="auto-hide-splash-screen" value="false" />
	 <!--<preference name="splash-screen-duration" value="8000" />-->
	 <access origin="http://peacecorps.gov" browserOnly="true" />
	 
</widget>
